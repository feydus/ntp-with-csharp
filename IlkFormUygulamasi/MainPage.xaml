<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IlkFormUygulamasi.MainPage">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="İki sayıyı toplayan uygulama"
               FontSize="20"
               HorizontalOptions="Center" />

        <Entry x:Name="sayi1Entry" Placeholder="Birinci sayıyı gir" Keyboard="Numeric"/>
        <Entry x:Name="sayi2Entry" Placeholder="İkinci sayıyı gir" Keyboard="Numeric"/>

        <Button Text="Topla" Clicked="ToplaClicked"/>

        <Label x:Name="sonucLabel"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="Blue"/>
    </VerticalStackLayout>
</ContentPage>
